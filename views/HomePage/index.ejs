<%- include('partials/header', {
    title: title,
    metaDescription: metaDescription,
    canonicalUrl: canonicalUrl
}) %>

<main>
    <!-- Hero Section -->
    <section class="hero">
        <div class="container">
            <div class="hero-content">
                <h1>Ethiopia's #1 Electrical & Facility Maintenance Company – 24/7 Reliable Services!</h1>
                <p class="subheadline">Expert Electrical Installations, Solar Power, HVAC, Fire Safety & Industrial Maintenance – Serving Addis Ababa & All Over Ethiopia!</p>
                
                <div class="hero-cta">
                    <a href="#contact" class="btn btn-primary">Get a FREE Quote Now!</a>
                    <a href="tel:+2519XXXXXXX" class="btn btn-secondary">Emergency? Call Us: +251 9X XXX XXXX</a>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Trust Indicators -->
    <section class="trust-badges">
        <div class="container">
            <div class="badge">
                <img src="/images/24-7-icon.svg" alt="24/7 Service" width="50" height="50">
                <p>24/7 Emergency Services</p>
            </div>
            <div class="badge">
                <img src="/images/certified-icon.svg" alt="Certified" width="50" height="50">
                <p>Certified Electricians</p>
            </div>
            <div class="badge">
                <img src="/images/warranty-icon.svg" alt="Warranty" width="50" height="50">
                <p>1-Year Service Warranty</p>
            </div>
            <div class="badge">
                <img src="/images/experience-icon.svg" alt="Experience" width="50" height="50">
                <p>10+ Years Experience</p>
            </div>
        </div>
    </section>
    
    <!-- Services Overview -->
    <section class="services-overview" id="services">
        <div class="container">
            <h2>Our Professional Services</h2>
            <p class="section-description">Comprehensive solutions for residential, commercial, and industrial clients across Ethiopia</p>
            
            <div class="services-grid">
                <div class="service-card">
                    <img src="/images/electrical-icon.svg" alt="Electrical Power Systems" width="60" height="60">
                    <h3>Electrical Power Systems</h3>
                    <ul>
                        <li>New Electrical Installations</li>
                        <li>Wiring & Panel Upgrades</li>
                        <li>Generator Solutions</li>
                        <li>UPS Installation</li>
                    </ul>
                    <a href="/services#electrical" class="btn btn-outline">Learn More</a>
                </div>
                
                <div class="service-card">
                    <img src="/images/solar-icon.svg" alt="Energy Solutions" width="60" height="60">
                    <h3>Energy Solutions</h3>
                    <ul>
                        <li>Solar Power Systems</li>
                        <li>Battery Backup</li>
                        <li>Generator Maintenance</li>
                        <li>Automatic Transfer Switches</li>
                    </ul>
                    <a href="/services#solar" class="btn btn-outline">Learn More</a>
                </div>
                
                <div class="service-card">
                    <img src="/images/lighting-icon.svg" alt="Lighting & Security" width="60" height="60">
                    <h3>Lighting & Security</h3>
                    <ul>
                        <li>LED Lighting Installation</li>
                        <li>Security Camera Systems</li>
                        <li>Motion Sensor Lighting</li>
                        <li>Smart Lighting Solutions</li>
                    </ul>
                    <a href="/services#lighting" class="btn btn-outline">Learn More</a>
                </div>
                
                <div class="service-card">
                    <img src="/images/fire-icon.svg" alt="Fire Safety" width="60" height="60">
                    <h3>Fire Safety Systems</h3>
                    <ul>
                        <li>Fire Detection Systems</li>
                        <li>Fire Alarm Installation</li>
                        <li>Fire Extinguisher Supply</li>
                        <li>Emergency Exit Lights</li>
                    </ul>
                    <a href="/services#fire-safety" class="btn btn-outline">Learn More</a>
                </div>
                
                <div class="service-card">
                    <img src="/images/hvac-icon.svg" alt="HVAC Services" width="60" height="60">
                    <h3>HVAC Services</h3>
                    <ul>
                        <li>AC Installation & Repair</li>
                        <li>Ventilation Systems</li>
                        <li>Ductwork Services</li>
                        <li>Building Automation</li>
                    </ul>
                    <a href="/services#hvac" class="btn btn-outline">Learn More</a>
                </div>
                
                <div class="service-card">
                    <img src="/images/maintenance-icon.svg" alt="Facility Maintenance" width="60" height="60">
                    <h3>Facility Maintenance</h3>
                    <ul>
                        <li>Preventive Maintenance</li>
                        <li>Machine Electrical Repairs</li>
                        <li>Plumbing & Electrical</li>
                        <li>Complete Facility Care</li>
                    </ul>
                    <a href="/services#maintenance" class="btn btn-outline">Learn More</a>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Why Choose Us -->
    <section class="why-choose-us">
        <div class="container">
            <div class="section-text">
                <h2>Why Choose EthioPower Solutions?</h2>
                <p>With over a decade of experience serving clients across Ethiopia, we've built our reputation on reliability, expertise, and exceptional customer service.</p>
                
                <ul class="benefits-list">
                    <li>
                        <strong>Certified Professionals:</strong> Our team consists of licensed electricians and certified technicians.
                    </li>
                    <li>
                        <strong>Quality Assurance:</strong> We use only high-quality materials and adhere to international standards.
                    </li>
                    <li>
                        <strong>Rapid Response:</strong> 24/7 emergency services with quick response times.
                    </li>
                    <li>
                        <strong>Comprehensive Solutions:</strong> From design to installation and maintenance, we handle it all.
                    </li>
                    <li>
                        <strong>Competitive Pricing:</strong> Transparent pricing with no hidden costs.
                    </li>
                </ul>
                
                <a href="/about" class="btn btn-primary">Learn More About Us</a>
            </div>
            
            <div class="section-image">
                <img src="/images/technician-working.jpg" alt="Our technician at work" width="500" height="500" loading="lazy">
            </div>
        </div>
    </section>
    
    <!-- Testimonials -->
    <section class="testimonials">
        <div class="container">
            <h2>What Our Clients Say</h2>
            
            <div class="testimonial-slider">
                <div class="testimonial">
                    <div class="testimonial-content">
                        <p>"EthioPower Solutions installed our solar power system and we've had zero issues. Their team was professional, knowledgeable, and completed the work on time. Highly recommended!"</p>
                    </div>
                    <div class="testimonial-author">
                        <img src="/images/client1.jpg" alt="Alemayehu Kebede" width="60" height="60" loading="lazy">
                        <div>
                            <h4>Alemayehu Kebede</h4>
                            <p>Hotel Manager, Addis Ababa</p>
                        </div>
                    </div>
                </div>
                
                <div class="testimonial">
                    <div class="testimonial-content">
                        <p>"When our factory had an electrical emergency at 2 AM, EthioPower responded immediately and fixed the issue. Their 24/7 service is a lifesaver for businesses like ours."</p>
                    </div>
                    <div class="testimonial-author">
                        <img src="/images/client2.jpg" alt="Selamawit Assefa" width="60" height="60" loading="lazy">
                        <div>
                            <h4>Selamawit Assefa</h4>
                            <p>Factory Owner, Dire Dawa</p>
                        </div>
                    </div>
                </div>
                
                <div class="testimonial">
                    <div class="testimonial-content">
                        <p>"The fire safety system installation was done perfectly with minimal disruption to our office operations. The team was courteous and professional throughout."</p>
                    </div>
                    <div class="testimonial-author">
                        <img src="/images/client3.jpg" alt="Michael Teshome" width="60" height="60" loading="lazy">
                        <div>
                            <h4>Michael Teshome</h4>
                            <p>Office Manager, Bahir Dar</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <!-- Recent Blog Posts -->
    <% if (featuredPosts && featuredPosts.length > 0) { %>
    <section class="blog-preview">
        <div class="container">
            <h2>Latest From Our Blog</h2>
            <p class="section-description">Tips, insights, and industry news from our experts</p>
            
            <div class="posts-grid">
                <% featuredPosts.forEach(post => { %>
                <article class="post-card">
                    <a href="/blog/<%= post.slug %>">
                        <img src="<%= post.featuredImage || '/images/blog-default.jpg' %>" alt="<%= post.title %>" width="400" height="250" loading="lazy">
                    </a>
                    <div class="post-content">
                        <h3><a href="/blog/<%= post.slug %>"><%= post.title %></a></h3>
                        <p class="post-excerpt"><%= post.excerpt %></p>
                        <a href="/blog/<%= post.slug %>" class="read-more">Read More</a>
                    </div>
                </article>
                <% }); %>
            </div>
            
            <div class="section-cta">
                <a href="/blog" class="btn btn-outline">View All Articles</a>
            </div>
        </div>
    </section>
    <% } %>
    
    <!-- CTA Section -->
    <section class="cta-section" id="contact">
        <div class="container">
            <div class="cta-content">
                <h2>Ready to Power Your Project?</h2>
                <p>Get in touch with our team today for a free consultation and quote.</p>
                
                <div class="cta-buttons">
                    <button id="openLeadModal" class="btn btn-primary">Request a Free Quote</button>
                    <a href="tel:+2519XXXXXXX" class="btn btn-secondary">Call Now: +251 9X XXX XXXX</a>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include('partials/footer') %>
